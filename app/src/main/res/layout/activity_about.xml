        android:text="@string/rules_five"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/pigBulletFive"
        app:layout_constraintTop_toBottomOf="@+id/rulesFour" />

    <ImageView
        android:id="@+id/pigBulletSix"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="288dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/objText"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <TextView
        android:id="@+id/rulesSix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="@string/rules_six"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/pigBulletSix"
        app:layout_constraintTop_toBottomOf="@+id/rulesFive" />

    <TextView
        android:id="@+id/creditHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="167dp"
        android:layout_marginLeft="167dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="199dp"
        android:layout_marginRight="199dp"
        android:text="@string/credits"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rulesSix" />

    <TextView
        android:id="@+id/credOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
