        app:layout_constraintTop_toBottomOf="@+id/objText"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <TextView
        android:id="@+id/rulesTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="@string/rules_two"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/pigBulletTwo"
        app:layout_constraintTop_toBottomOf="@+id/objText" />

    <ImageView
        android:id="@+id/pigBulletThree"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/objText"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <TextView
        android:id="@+id/rulesThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="128dp"
        android:text="@string/rules_three"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/pigBulletThree"
        app:layout_constraintTop_toBottomOf="@+id/objText" />

    <ImageView
        android:id="@+id/pigBulletFour"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="172dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/objText"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <TextView
        android:id="@+id/rulesFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="24dp"
        android:text="@string/rules_four"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/pigBulletFour"
